@model EditIssueViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>@Model.Issue.Project.Title</h1>

<h4>Edit Issue</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Issue" asp-action="Edit" asp-route-pid="@Model.Issue.ProjectId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Issue.Id" />
            <input type="hidden" asp-for="Issue.Modified" />
            <input type="hidden" asp-for="Issue.Created" />
            <input type="hidden" asp-for="Issue.ProjectId"/>
            <input type="hidden" asp-for="Issue.CreatorUserId" />
            <div class="form-group">
                <label asp-for="Issue.Title" class="control-label"></label>
                <input asp-for="Issue.Title" class="form-control" />
                <span asp-validation-for="Issue.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Issue.Desc" class="control-label"></label>
                <input asp-for="Issue.Desc" class="form-control" />
                <span asp-validation-for="Issue.Desc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Issue.AssignedUserId" class="control-label"></label>
                <select asp-for="Issue.AssignedUserId" class="form-control" asp-items='@new SelectList(Model.AssignableUsers, "Id", "UserName")'></select>
                <span asp-validation-for="Issue.AssignedUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Issue.Status" class="control-label"></label>
                <select asp-for="Issue.Status" class="form-control" asp-items="@new SelectList(IssueStatus.List)" ><</select>
                <span asp-validation-for="Issue.Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Issue.Priority" class="control-label"></label>
                <select asp-for="Issue.Priority" class="form-control" asp-items="@new SelectList(IssuePriority.List)"></select>
                <span asp-validation-for="Issue.Priority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Issue.Type" class="control-label"></label>
                <select asp-for="Issue.Type" class="form-control" asp-items="@new SelectList(IssueType.List)"></select>
                <span asp-validation-for="Issue.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-pid="@Model.Issue.ProjectId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
