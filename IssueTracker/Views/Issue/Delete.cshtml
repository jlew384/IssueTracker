@model DeleteIssueModelView

@{
    ViewData["Title"] = "Delete Issue";
}

<div class="card">
    <div class="card-header">
        <h4>Delete Issue</h4>
        <h5>Are you sure you want to delete this?</h5>
    </div>
    <div class="card-body">
        <dl class="row">
        
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Issue.Title)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Issue.Title)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Issue.Desc)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Issue.Desc)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Issue.Status)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Issue.Status)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Issue.Priority)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Issue.Priority)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Issue.Type)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Issue.Type)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Issue.AssignedUser)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Issue.AssignedUser.UserName)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Issue.CreatorUser)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Issue.CreatorUser.UserName)
            </dd>
        
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Issue.Created)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Issue.Created)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Issue.Modified)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Issue.Modified)
            </dd>
        </dl>
    </div>
    <form class="card-footer d-flex justify-content-between" asp-action="Delete">
        <a class="btn btn-primary" href="@Model.RefererUrl">Cancel</a>
        <input type="hidden" asp-for="Issue.Id" />
        <input hidden asp-for="Issue.ProjectId" />
        <input hidden asp-for="RefererUrl" />
        <input type="submit" value="Delete" class="btn btn-danger" />        
    </form>    
</div>
