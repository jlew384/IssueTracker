@model IssueTracker.Models.Project

@{
    ViewData["Title"] = "Delete Project";
}
<div class="card">
    <div class="card-header">
        <h4>Are you sure you want to delete the "@Model.Title" project?</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Desc)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Desc)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.DateCreated)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.DateCreated)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.DateModified)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.DateModified)
            </dd>
        </dl>
    </div>
    <div class="card-footer">
        <form class="d-flex justify-content-between" asp-action="Delete">
            <a class="btn btn-primary" asp-action="Index">Back to List</a>
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete Project" class="btn btn-danger" />
            
        </form>
    </div>
    
</div>
