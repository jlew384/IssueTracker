@model Project

@{
    ViewData["Title"] = "Create Project";
}
<form class="container p-0" asp-action="Create">
    <div class="my-2 mx-1 d-flex align-items-center justify-content-between">
        <span class="h6 text-muted">Create Project</span>
        <a class="btn btn-sm btn-primary" href="@ViewBag.BackUrl">Back</a>
    </div>

    <div class="card shadow box-shadow">
        <div class="card-body">
        
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label h5 mb-3"></label>
                <input asp-for="Title" class="form-control mb-3" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desc" class="control-label h5 mb-3"></label>
                <textarea asp-for="Desc" class="form-control mb-3" rows="3"></textarea>
                <span asp-validation-for="Desc" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-between">
                <a class="btn btn-primary" href="@ViewBag.BackUrl">Cancel</a>
                <input type="submit" value="Create Project" class="btn btn-primary" />        
            </div>
        </div>           
    </div>    
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
