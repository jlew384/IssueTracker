@model CreateProjectViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Project</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Project.Title" class="control-label"></label>
                <input asp-for="Project.Title" class="form-control" />
                <span asp-validation-for="Project.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Project.Desc" class="control-label"></label>
                <input asp-for="Project.Desc" class="form-control" />
                <span asp-validation-for="Project.Desc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectManagerId" class="control-label"></label>
                <select asp-for="ProjectManagerId" class="form-control" asp-items='@new SelectList(Model.ProjectManagers, "Id", "UserName")' ><</select>
                <span asp-validation-for="ProjectManagerId" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="AssignedUserId" class="control-label"></label>
                <select asp-for="AssignedUserId" class="form-control" asp-items='@new SelectList(Model.ApplicationUsers, "Id", "UserName")' ><</select>
                <span asp-validation-for="AssignedUserId" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <h6>Assign users to the project:</h6>
                @for (var i = 0; i < Model.AssignedUsers.Count; i++)
                {
                    <div class="form-check">
                        <input type="checkbox" asp-for="@Model.AssignedUsers[i].IsSelected">
                        <label asp-for="@Model.AssignedUsers[i].IsSelected">@Model.AssignedUsers[i].User.UserName</label>
                        <input type="hidden" asp-for="@Model.AssignedUsers[i].User.Id">
                    </div>
                    
                }
            </div>
      
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
